<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="net.mononz.nanodegree.movies.ActivityMovies">

    <ImageView
        android:id="@+id/poster"
        android:contentDescription="@string/icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        tools:src="@drawable/ant_man" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/button_padding"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/movies_popularity"
            style="@style/GeneralTextBold" />

        <TextView
            android:id="@+id/popularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/GeneralText"
            tools:text="44.8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/movies_rating"
            style="@style/GeneralTextBold" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/GeneralText"
            tools:text="7.8 (1150)" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/movies_released"
            android:gravity="center_horizontal"
            style="@style/GeneralTextBold" />

        <TextView
            android:id="@+id/released"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            style="@style/GeneralText"
            tools:text="2015-03-06" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingLeft="@dimen/button_padding"
        android:paddingRight="@dimen/button_padding" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/movies_plot"
            style="@style/GeneralTextBold"
            android:focusable="false"
            android:gravity="center_horizontal" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/plot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/GeneralText"
                tools:text="Lorem Ipsum" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>